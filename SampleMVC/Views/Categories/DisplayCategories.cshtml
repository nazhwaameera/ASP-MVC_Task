@model IEnumerable<MyWebFormApp.BLL.DTOs.CategoryDTO>

<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Category Page</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Select categories</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])

                <div class="row">
                    <div class="col-lg-12">
                        @foreach (var category in Model)
                        {
                            <a href="@Url.Action("Index", "Articles", new { categoryId = category.CategoryID })" class="btn btn-outline-info btn-sm mb-2 mr-2">@category.CategoryName</a>
                        }
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>