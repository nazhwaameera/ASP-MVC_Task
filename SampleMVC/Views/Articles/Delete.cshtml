@{
    ViewData["CategoryID"] = Model.CategoryID;
}
<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Delete Category</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Delete Article</h6>
            </div>
            <div class="card-body">
                <p>Are you sure to delete this article ?</p>
                <form asp-action="Delete">
                    <input type="hidden" name="ArticleID" value="@Model.ArticleID" />
                    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />

                    <div class="form-group">
                        <label for="Title">Title :</label>
                        <input type="text" class="form-control" name="Title" value="@Model.Title" disabled />
                    </div>

                    <div class="form-group">
                        <label for="Details">Details :</label>
                        <textarea class="form-control" name="Details" rows="3" disabled>@Model.Details</textarea>
                    </div>

                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="chkIsApproved" name="IsApproved" checked="@Model.IsApproved" disabled />
                        <label class="form-check-label" for="IsApproved">Is Approved</label>
                    </div>

                    <div class="form-group">
                        <label for="Pic">Picture :</label>
                        <img src="@Url.Content("~/pics/" + Model.Pic)" alt="Article Picture" class="img-thumbnail" name="Pic" width="100" height="100" />
                        <input type="file" class="form-control-file" name="Pic" disabled />
                    </div>
                    <div class="form-group">
                        <input type="Submit" class="btn btn-danger btn-sm" value="Delete" />
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>
