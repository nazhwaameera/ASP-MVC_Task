@model MyWebFormApp.BLL.DTOs.ArticleCreateDTO

<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add Article</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Add Article</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message2"])
                <form method="post" enctype="multipart/form-data" action="/Articles/Create">
                    @* Hidden input field for CategoryID *@
                    <input type="hidden" name="CategoryID" value="@ViewData["CategoryID"]" />
                    <div class="form-group">
                        <label for="Title">Title :</label>
                        <input type="text" class="form-control" name="Title" placeholder="Insert Article Title" />
                    </div>
                    <div class="form-group">
                        <label for="Details">Details :</label>
                        <textarea class="form-control" name="Details" rows="3" placeholder="Enter Detail"></textarea>
                    </div>

                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="chkIsApproved" name="IsApproved" asp-for="IsApproved" />
                        <label class="form-check-label" for="IsApproved">Is Approved</label>
                    </div>

                    <div class="form-group">
                        <label for="Pic">Select Picture :</label>
                        <input type="file" class="form-control-file" name="Pic" />
                    </div>

                    <input type="Submit" value="Create" class="btn btn-success btn-sm" />
                </form>
            </div>
        </div>

    </div>

</div>
