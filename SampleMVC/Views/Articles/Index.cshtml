@model IEnumerable<MyWebFormApp.BLL.DTOs.ArticleDTO>

<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Article Page</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Article Page</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])
                @Html.Raw(ViewData["message2"])
                <div class="mb-3">
                    <a asp-action="Create" class="btn btn-success">Create Article</a>
                </div>

                <table class="table table-striped">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Details</th>
                        <th>Publish Date</th>
                        <th>Is Approved</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                    </tr>
                    @foreach (var article in Model)
                    {
                        <tr>
                            <td>@article.ArticleID</td>
                            <td>@article.Title</td>
                            <td>@article.Details</td>
                            <td>@article.PublishDate</td>
                            <td>@article.IsApproved</td>
                            <td><img src="~/pics/@(article.Pic)" width="100" height="100" /></td>
                            <td><a asp-action="Edit" asp-route-id="@article.ArticleID" class="btn btn-warning btn-sm">edit</a></td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@article.ArticleID" class="btn btn-danger btn-sm">delete</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

    </div>

</div>

